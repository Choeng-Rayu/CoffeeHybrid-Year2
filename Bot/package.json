{
  "name": "coffee-telegram-bot",
  "version": "1.0.0",
  "description": "Coffee Ordering Telegram Bot",
  "main": "bot-new.js",
  "type": "module",
  "scripts": {
    "start": "node bot-new.js",
    "dev": "node --watch bot-new.js",
    "start:old": "node bot.js",
    "dev:old": "node --watch bot.js",
    "webhook:set": "node scripts/setup-webhook.js set",
    "webhook:delete": "node scripts/setup-webhook.js delete",
    "webhook:info": "node scripts/setup-webhook.js info",
    "deploy": "NODE_ENV=production node bot-new.js"
  },
  "dependencies": {
    "axios": "^1.6.0",
    "dotenv": "^16.3.1",
    "express": "^5.1.0",
    "mongoose": "^8.16.0",
    "nodemon": "^3.1.10",
    "qr-image": "^3.2.0",
    "telegraf": "^4.16.3",
    "uuid": "^9.0.1"
  }
}
